{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "composite": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".", 
    "paths": {
      "@/*": ["packages/*/src"],
      "@/config/*": ["packages/config/src/*"],
      "@/core-banking/*": ["packages/core-banking/src/*"],
      "@/fraud-detection/*": ["packages/fraud-detection/src/*"]
    }
  }
}
